## BASH ##

# Keep the first coincidence in the alignment (lower e-value)
awk -F"\t" '{ split($1, fields, "."); if (!seen[fields[1]]) { print; seen[fields[1]]=1 } }' resultsdb.m8 > association_esmatlas_scope
awk '{ match($2, /[[:alpha:]]\.[[:digit:]]+\.[[:digit:]]+/); print $1, substr($2, RSTART, RLENGTH) }' association_esmatlas_scope
sed 's/\.[^.]*$//' association_esmatlas_scope

# Calculate the most reppeated domain:
cut -d ' ' -f 2 association_esmatlas_scope | sort | uniq -c | sort -nr | head -n 1
