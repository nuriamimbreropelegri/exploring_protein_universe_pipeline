### BASH
## Calculate the most conserved fragment 
cut -f2 alignment_file_clustered >> temp_ids
cut -f4 alignment_file_clustered >> temp_ids
sort temp_ids | uniq -c | sort -k1 -nr | head -10
rm temp_ids

